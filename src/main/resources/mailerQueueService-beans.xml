<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.1.xsd">

	<bean id="mailerQueueService" 
		class="com.noi.utility.mail.JavamailMailerQueueService" init-method="initService">
		<property name="smtpHostname"><value>${MailerQueueService.smtpHostname}</value></property>	
		<property name="smtpUsername"><value>${MailerQueueService.smtpUsername}</value></property>	
		<property name="smtpPassword"><value>${MailerQueueService.smtpPassword}</value></property>		
		<property name="numberThreads"><value>${MailerQueueService.numberThreads}</value></property>	
		<property name="sslProvider"><value>${MailerQueueService.sslProvider}</value></property>	
		<property name="securityType"><value>${MailerQueueService.securityType}</value></property>	
	</bean>


	

</beans>