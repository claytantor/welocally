<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.1.xsd">
           
	
	<bean id="BusinessManagerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">	
		<property name="transactionManager"><ref bean="ApplicationTransactionManager"/></property>
		<property name="target"><ref local="BusinessManagerServiceTarget"/></property>
		<property name="transactionAttributes">
			<props>
				<prop key="find*">PROPAGATION_REQUIRED,readOnly, -BLServiceException</prop>
				<prop key="save*">PROPAGATION_REQUIRED, -BLServiceException</prop>
				<prop key="delete*">PROPAGATION_REQUIRED, -BLServiceException</prop>
			</props>
		</property>
	</bean>
	
	<bean id="BusinessManagerServiceTarget" class="com.sightlyinc.ratecred.service.BusinessManagerServiceImpl">
		<property name="businessDao" ref="BusinessDao"/>
		<property name="raterBusinessMetricsDao" ref="RaterBusinessMetricsDao"/>
		<property name="businessMetricsDao" ref="BusinessMetricsDao"/>
		<property name="businessLocationDao" ref="BusinessLocationDao"/>		
		<property name="placeDao" ref="PlaceDao"/>
		<property name="raterDao" ref="RaterDao"/>
		<property name="awardDao" ref="AwardDao"/>				
		<property name="awardTypeDao" ref="AwardTypeDao"/>				
		<property name="awardOfferDao" ref="AwardOfferDao"/>
		<property name="imageBase" value="imageUrl=/images/awards/award_"/>
		<property name="imageBaseType" value="_64.png"/>				
	</bean>
	

</beans>