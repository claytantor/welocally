<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.1.xsd">
	
	
	<bean id="linkClient" 
		class="com.sightlyinc.ratecred.client.link.CommisionJunctionLinkClient">
		<property name="apiKey" value="${linkClient.apiKey}"/>
	</bean>
	
	<bean id="webLinksRequestModel" 
		class="com.sightlyinc.ratecred.client.link.LinkClientRequest">
		<property name="linkRequestModel">
			<map> 
		        <entry> 
		            <key> 
		                <value>advertiser-ids</value>
		            </key> 
		            <value>${linkClient.advertiserIds}</value> 
		        </entry>			
		        <entry> 
		            <key> 
		                <value>website-id</value>
		            </key> 
		            <value>${linkClient.websiteId}</value> 
		        </entry> 
		        <entry> 
		            <key> 
		                <value>link-type</value>
		            </key> 
		            <value>${linkClient.linkType}</value> 
		        </entry> 
		        <entry> 
		            <key> 
		                <value>records-per-page</value>
		            </key> 
		            <value>${linkClient.pageSize}</value> 
		        </entry> 		        
		   </map>		
		</property>
	</bean>
	 

</beans>