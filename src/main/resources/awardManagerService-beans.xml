<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.1.xsd">
           
	
	<bean id="awardManagerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">	
		<property name="transactionManager"><ref bean="ApplicationTransactionManager"/></property>
		<property name="target"><ref local="AwardManagerServiceTarget"/></property>
		<property name="transactionAttributes">
			<props>
				<prop key="find*">PROPAGATION_REQUIRED, -BLServiceException</prop>
				<prop key="save*">PROPAGATION_REQUIRED, -BLServiceException</prop>
				<prop key="delete*">PROPAGATION_REQUIRED, -BLServiceException</prop>		
			</props>
		</property>
	</bean>
	
	<bean id="AwardManagerServiceTarget" class="com.sightlyinc.ratecred.service.AwardManagerServiceImpl">
		<property name="awardDao" ref="AwardDao"/>				
		<property name="awardTypeDao" ref="AwardTypeDao"/>				
		<property name="awardOfferDao" ref="AwardOfferDao"/>				
	</bean>
	

</beans>