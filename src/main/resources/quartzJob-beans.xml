<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	    <property name="triggers">
	        <list>
	            <ref bean="offerCheckTrigger" />
	        </list>
	    </property>
	</bean>
	
	<bean name="offerPoolJob" class="org.springframework.scheduling.quartz.JobDetailBean">
	  <property name="jobClass" value="com.sightlyinc.ratecred.job.OfferPoolJob" />
	  <property name="jobDataAsMap">
	    <map>
	      <entry key="offerPoolService">
	      		<ref bean="offerPoolService" />
	      </entry>      
	    </map>
	  </property>
	</bean>

	
	<bean id="offerCheckTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	    <property name="jobDetail" ref="offerPoolJob" />
	    <!-- run at 5 & 15 every day -->
	    <property name="cronExpression" value="0 0 5/15 * * ?" />
	</bean>
	
	
