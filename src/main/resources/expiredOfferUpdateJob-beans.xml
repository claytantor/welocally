<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean name="raterAwardsUpdateOffersJob" class="org.springframework.scheduling.quartz.JobDetailBean">
	  <property name="jobClass" value="com.sightlyinc.ratecred.admin.job.RaterAwardsUpdateOffersJob" />
	  <property name="jobDataAsMap">
	    <map>  
	      <entry key="updateAwardOfferMessageProducer">
	      		<ref bean="updateAwardOfferMessageProducer" />
	      </entry>
	      <entry key="awardManagerService">
	      		<ref bean="awardManagerService" />
	      </entry>
	      <entry key="sessionFactory">
	      		<ref bean="sessionFactory" />
	      </entry>	      	      	      	      	       	       	          
	    </map>
	  </property>
	</bean>
	
	<bean id="raterAwardsUpdateOffersTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	    <property name="jobDetail" ref="raterAwardsUpdateOffersJob" />
	    <!-- run at 4 every day -->
	    <!-- <property name="cronExpression" value="0 0 4 * * ?" /> -->
	    <property name="cronExpression" value="${raterAwardsUpdateOffersTrigger.cronExpression}" />
	    
	</bean>
	
	
</beans>