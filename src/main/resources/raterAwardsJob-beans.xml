<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	
	<bean name="raterAwardsJob" class="org.springframework.scheduling.quartz.JobDetailBean">
	  <property name="jobClass" value="com.sightlyinc.ratecred.admin.job.RaterAwardsJob" />
	  <property name="jobDataAsMap">
	    <map>
	      <entry key="offerPoolService">
	      		<ref bean="offerPoolService" />
	      </entry> 
	      <entry key="ratingManagerService">
	      		<ref bean="RatingManagerService" />
	      </entry>
	      <entry key="awardManagerService">
	      		<ref bean="awardManagerService" />
	      </entry>
	      <entry key="raterAwardsService">
	      		<ref bean="raterAwardsService" />
	      </entry>	      	      	       	       	          
	    </map>
	  </property>
	</bean>

	
	<bean id="raterAwardsTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	    <property name="jobDetail" ref="raterAwardsJob" />
	    <!-- run at 15m every hour -->
	    <property name="cronExpression" value="${raterAwardsTrigger.cronExpression}" />
	</bean>
	
	
</beans>