<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<tx:annotation-driven transaction-manager="ApplicationTransactionManager"/>
		
	<!-- Choose the dialect that matches your "dataSource" definition -->
	<bean id="ApplicationSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="mappingResources">
			<list>
				<value>com/sightlyinc/ratecred/model/Rating.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/Rater.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/RatingAttribute.hbm.xml</value>				
				<value>com/sightlyinc/ratecred/model/PlaceCityState.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/Place.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/PlaceAttribute.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/PlaceRating.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/AwardType.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/Award.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/AwardOffer.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/AwardOfferItem.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/Compliment.hbm.xml</value>
				
				<!-- order handling -->
				<value>com/sightlyinc/ratecred/model/Order.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/Voucher.hbm.xml</value>				
				
				<!-- new business entities -->
				<value>com/sightlyinc/ratecred/model/Business.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/BusinessLocation.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/BusinessImage.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/BusinessLocationImage.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/BusinessAttribute.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/BusinessMetrics.hbm.xml</value>				
				<value>com/noi/utility/hibernate/ImageValue.hbm.xml</value>
				<value>com/sightlyinc/ratecred/model/User.hbm.xml</value>
			</list>
		</property>				
		<property name="hibernateProperties">
			<ref bean="HibernateDatabaseProperties"/>
		</property>	
		<property name="dataSource">
			<ref bean="LocalDS"/>
		</property>				
	</bean>
	
	<bean id="ApplicationTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory"><ref local="ApplicationSessionFactory"/></property>
	</bean>	
	

	
	
</beans>